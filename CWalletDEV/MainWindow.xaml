<Window x:Class="CWalletDEV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CWalletDEV"
        mc:Ignorable="d"
        Title="MainWindow" Height="672" Width="1245">
    <Window.Resources>
        

        <Storyboard x:Key="MenuEnter">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="TxtMenu" Storyboard.TargetProperty="(TextBlock.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FFC2AD86"/>
                <EasingColorKeyFrame KeyTime="00:00:00.1000000" Value="#FF94825F"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MenuLeave">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="TxtMenu" Storyboard.TargetProperty="(TextBlock.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FFC2AD86"/>
                <EasingColorKeyFrame KeyTime="00:00:00.1000000" Value="#FF94825F"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CategoryEnter">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="TxtCategory" Storyboard.TargetProperty="(TextBlock.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FFC2AD86"/>
                <EasingColorKeyFrame KeyTime="00:00:00.1000000" Value="#FF94825F"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CategoryLeave">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="TxtCategory" Storyboard.TargetProperty="(TextBlock.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FF94825F"/>
                <EasingColorKeyFrame KeyTime="00:00:00.1000000" Value="#FFC2AD86"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="StatsEnter">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="TxtStats" Storyboard.TargetProperty="(TextBlock.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FFC2AD86"/>
                <EasingColorKeyFrame KeyTime="00:00:00.1000000" Value="#FF94825F"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="StatsLeave">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="TxtStats" Storyboard.TargetProperty="(TextBlock.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FF94825F"/>
                <EasingColorKeyFrame KeyTime="00:00:00.1000000" Value="#FFC2AD86"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="PayEnter">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="TxtPlannedPay" Storyboard.TargetProperty="(TextBlock.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FFC2AD86"/>
                <EasingColorKeyFrame KeyTime="00:00:00.1000000" Value="#FF94825F"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="PayLeave">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="TxtPlannedPay" Storyboard.TargetProperty="(TextBlock.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FF94825F"/>
                <EasingColorKeyFrame KeyTime="00:00:00.1000000" Value="#FFC2AD86"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="SettingsEnter">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="TxtSettings" Storyboard.TargetProperty="(TextBlock.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FFC2AD86"/>
                <EasingColorKeyFrame KeyTime="00:00:00.1000000" Value="#FF94825F"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="SettingsLeave">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="TxtSettings" Storyboard.TargetProperty="(TextBlock.Background).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FF94825F"/>
                <EasingColorKeyFrame KeyTime="00:00:00.1000000" Value="#FFC2AD86"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>

    </Window.Resources>
    <Window.Triggers>
        <!-- This one triggers after Window appears -->
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{DynamicResource MenuEnter}"/>
        </EventTrigger>
    </Window.Triggers>
    <Grid>
        <!-- Add your side bar and main content here -->

        <Grid HorizontalAlignment="Left" Height="656" VerticalAlignment="Center" Width="231" Background="#FFE6D2AD">
            <TextBlock x:Name="TxtMenu" HorizontalAlignment="Center" Height="70" Margin="0,93,0,0" TextWrapping="Wrap" Text="Menu" VerticalAlignment="Top" Width="231" FontSize="24" Padding="109,17,0,0" FontFamily="Comic Sans MS" Background="#FFC2AD86"><InlineUIContainer>
        </InlineUIContainer></TextBlock>
            <Image Height="60" VerticalAlignment="Top" Width="59" Source="/Menu.png" HorizontalAlignment="Left" Margin="26,98,0,0"/>

            <TextBlock x:Name="TxtCategory" HorizontalAlignment="Center" Height="70" Margin="0,168,0,0" TextWrapping="Wrap" Text="Category" VerticalAlignment="Top" Width="231" FontSize="24" Padding="108,17,0,0" FontFamily="Comic Sans MS" Background="#FFC2AD86"><InlineUIContainer>
        </InlineUIContainer></TextBlock>
            <Image Height="58" VerticalAlignment="Top" Width="59" Source="/Category.png" HorizontalAlignment="Left" Margin="26,174,0,0"/>

            <TextBlock x:Name="TxtStats" HorizontalAlignment="Center" Height="70" Margin="0,243,0,0" TextWrapping="Wrap" Text="Statistics" VerticalAlignment="Top" Width="231" FontSize="24" Padding="109,17,0,0" FontFamily="Comic Sans MS" Background="#FFC2AD86"><InlineUIContainer>
        </InlineUIContainer></TextBlock>
            <Image Height="59" VerticalAlignment="Top" Width="59" Source="/Stats.png" HorizontalAlignment="Left" Margin="26,249,0,0"/>

            <TextBlock x:Name="TxtPlannedPay" HorizontalAlignment="Center" Height="70" TextWrapping="Wrap" Text="  Planned Payments" VerticalAlignment="Top" Width="231" FontSize="24" Padding="109,1,0,0" FontFamily="Comic Sans MS" Background="#FFC2AD86" Margin="0,318,0,0"><InlineUIContainer>
        </InlineUIContainer></TextBlock>
            <Image Height="58" VerticalAlignment="Top" Width="59" Source="/Pay.png" HorizontalAlignment="Left" Margin="26,324,0,0"/>

            <TextBlock x:Name="TxtSettings" HorizontalAlignment="Center" Height="70" Margin="0,393,0,0" TextWrapping="Wrap" Text="Settings" VerticalAlignment="Top" Width="231" FontSize="24" Padding="109,17,0,0" FontFamily="Comic Sans MS" Background="#FFC2AD86"><InlineUIContainer>
        </InlineUIContainer></TextBlock>
            <Image Height="59" VerticalAlignment="Top" Width="59" Source="/Settings.png" HorizontalAlignment="Left" Margin="26,400,0,0"/>

        </Grid>
        <!-- Add your side bar and main content here -->
        <StackPanel x:Name="SideBar" Grid.Column="0" Background="#FFE6D2AD" MaxWidth="231" MinWidth="98" RenderTransformOrigin="0.5,0.5" Margin="-290,0,1303,0">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <StackPanel.Effect>
                <DropShadowEffect Direction="0" Opacity="0.6"/>
            </StackPanel.Effect>
            <StackPanel x:Name="StackSideBar" Orientation="Vertical" Height="656" Width="231" RenderTransformOrigin="0.5,0.5">
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </StackPanel.RenderTransform>

                <!--MouseOver settings for buttons-->
                <!--Menu-->
                <Rectangle Height="42" Stroke="Black" Visibility="Hidden"/>
                <Button Height="69" x:Name="btnMenu" Background="#FFC2AD86">
                    <Button.Effect>
                        <DropShadowEffect RenderingBias="Performance" BlurRadius="3" Direction="270" Opacity="0.6"/>
                    </Button.Effect>
                    <!--Images and text-->
                    <StackPanel Orientation="Horizontal" Width="221">
                        <Label Content="&#xA;" Width="18"/>
                        <Image x:Name="image" Source="/Menu.png" Stretch="Fill" Height="59" Width="59" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                        <Label Content="&#xA;" Width="32"/>
                        <Label Padding="0" Content="Menu" Height="32" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="24" Width="62"/>
                    </StackPanel>
                </Button>

                <!--Categories-->
                <Rectangle Height="42" Stroke="Black" Visibility="Hidden"/>
                <Button Height="69" x:Name="btnCategories" Background="#FFC2AD86">
                    <Button.Effect>
                        <DropShadowEffect Direction="270" Opacity="0.6"/>
                    </Button.Effect>
                    <!--Images and text-->
                    <StackPanel Orientation="Horizontal" Width="221">
                        <Label Content="&#xA;" Width="18"/>
                        <Image Source="/Category.png" Stretch="Fill" Height="59" Width="59"/>
                        <Label Content="&#xA;" Width="32"/>
                        <Label Padding="0" Content="Category" Height="32" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="24" Width="104"/>
                    </StackPanel>
                </Button>

                <!--Statistics-->
                <Rectangle Height="42" Stroke="Black" Visibility="Hidden"/>
                <Button Height="69" x:Name="btnStatistic" Background="#FFC2AD86">
                    <Button.Effect>
                        <DropShadowEffect Direction="270" Opacity="0.6"/>
                    </Button.Effect>
                    <!--Images and text-->
                    <StackPanel Orientation="Horizontal" Width="221">
                        <Label Content="&#xA;" Width="18"/>
                        <Image Source="/Stats.png" Stretch="Fill" Height="59" Width="59"/>
                        <Label Content="&#xA;" Width="32"/>
                        <Label Padding="0" Content="Statistics" Height="32" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="24" Width="96"/>
                    </StackPanel>
                </Button>

                <!--Payment-->
                <Rectangle Height="42" Stroke="Black" Visibility="Hidden"/>
                <Button Height="69" x:Name="btnPlanPay" Background="#FFC2AD86" Click="btnPlanPay_Click">
                    <Button.Effect>
                        <DropShadowEffect Direction="270" Opacity="0.6"/>
                    </Button.Effect>
                    <!--Images and text-->
                    <StackPanel Orientation="Horizontal" Width="221">
                        <Label Content="&#xA;" Width="18"/>
                        <Image Source="/Pay.png" Stretch="Fill" Height="59" Width="59"/>
                        <Label Content="&#xA;" Width="23"/>
                        <Label Padding="0" Content=" Planned&#xA;Payments" Height="62" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="24" Width="108"/>
                    </StackPanel>
                </Button>

                <!--Settings-->
                <Rectangle Height="42" Stroke="Black" Visibility="Hidden"/>
                <Button Height="69" x:Name="btnSettings" Background="#FFC2AD86">
                    <Button.Effect>
                        <DropShadowEffect Direction="270" Opacity="0.6"/>
                    </Button.Effect>
                    <!--Images and text-->
                    <StackPanel Orientation="Horizontal" Width="221">
                        <Label Content="&#xA;" Width="18"/>
                        <Image Source="/Settings.png" Stretch="Fill" Height="59" Width="59"/>
                        <Label Content="&#xA;" Width="32"/>
                        <Label Padding="0" Content="Settings" Height="32" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="24" Width="87"/>
                    </StackPanel>
                </Button>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
