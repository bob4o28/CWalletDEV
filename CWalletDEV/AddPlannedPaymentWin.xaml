<Window x:Class="CWalletDEV.AddPlannedPaymentWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CWalletDEV"
        mc:Ignorable="d"
        Title="AddPlannedPaymentWin" Height="345" Width="800">
    <Grid Height="335" VerticalAlignment="Top" Background="#FFECB159">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <DockPanel HorizontalAlignment="Center" LastChildFill="False" Grid.RowSpan="3" Width="59" Background="#FFC5F0F4" Margin="0,0,0,-27"/>
        
        <Label Content="Name" Grid.Row="2" Grid.Column="0" Margin="0,45,0,229"/>
        <TextBox x:Name="Name" Grid.Row="2" Grid.ColumnSpan="2" Margin="59,31,0,215"/>

        <Label Content="Worth" Grid.Row="2" Grid.Column="0" RenderTransformOrigin="0.42,1.278" Margin="0,128,0,154"/>
        <TextBox x:Name="Worth" Grid.Row="2" Grid.ColumnSpan="2" Margin="59,112,0,132" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.212"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.514"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

        <Label Content="Date Pick" Grid.Row="2" Grid.Column="0" Margin="0,202,0,74"/>
        <DatePicker x:Name="Date_Pick" Grid.Row="2" Grid.ColumnSpan="2" Margin="59,202,0,74"/>
        <Label Grid.Column="1" Content="Add Payment" HorizontalAlignment="Left" Height="26" Margin="299,0,0,0" VerticalAlignment="Top" Width="84" Grid.Row="2"/>
        <Button Grid.Column="1" Content="Save" HorizontalAlignment="Left" Height="52" Margin="482,254,0,0" VerticalAlignment="Top" Width="95" Grid.Row="2" Click="Button_Click"/>
        <Button Grid.Column="1" Content="Cancel" HorizontalAlignment="Left" Height="52" Margin="605,254,0,0" VerticalAlignment="Top" Width="95" Grid.Row="2"/>
        <Label x:Name="NoInputLabel" Grid.Column="1" Content="" HorizontalAlignment="Left" Height="50" Margin="10,254,0,0" Grid.RowSpan="3" VerticalAlignment="Top" Width="321"/>
        
    </Grid>
</Window>
