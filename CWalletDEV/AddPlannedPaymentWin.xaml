<Window x:Class="CWalletDEV.AddPlannedPaymentWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CWalletDEV"
        mc:Ignorable="d"
        Title="AddPlannedPaymentWin" Height="345" Width="800">
    <Grid Margin="10,10,10,0" Height="325" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Name" Grid.Row="2" Grid.Column="0" Margin="0,39,0,208"/>
        <TextBox x:Name="Name" Grid.Row="2" Grid.ColumnSpan="2" Margin="59,31,0,194"/>

        <Label Content="Worth" Grid.Row="2" Grid.Column="0" RenderTransformOrigin="0.42,1.278" Margin="0,96,0,151"/>
        <TextBox x:Name="Worth" Grid.Row="2" Grid.ColumnSpan="2" Margin="59,86,0,133" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.212"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.514"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

        <Label Content="Date Pick" Grid.Row="2" Grid.Column="0" Margin="0,155,0,87"/>
        <DatePicker x:Name="Date_Pick" Grid.Row="2" Grid.ColumnSpan="2" Margin="59,155,10,87"/>
        <Label Grid.Column="1" Content="Add Payment" HorizontalAlignment="Left" Height="26" Margin="289,0,0,0" VerticalAlignment="Top" Width="84" Grid.Row="2"/>
        <Button Grid.Column="1" Content="Button" HorizontalAlignment="Left" Height="52" Margin="516,225,0,0" VerticalAlignment="Top" Width="95" Grid.Row="2" Click="Button_Click"/>
    </Grid>
</Window>
